<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="true"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <!--可以定义自己的通用mapper接口-->
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <!--是否区分大小写-->
            <property name="caseSensitive" value="false"/>
            <!--是否强制生成注解-->
            <property name="forceAnnotation" value="true"/>
            <!--<property name="beginningDelimiter" value="`"/>-->
            <!--<property name="endingDelimiter" value="`"/>-->
            <!--<property name="lombok" value="Getter,Setter,ToString,Accessors"/>-->
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://13.209.5.79:3306/test"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!--MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="com.example.demo.model"
                            targetProject="src/test/java">
            <property name="rootClass" value="com.example.demo.commons.model.po.BasePO" />
        </javaModelGenerator>
        <!--mapper  XML-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/test/resources"/>
        <!--JAVA 接口类-->
        <javaClientGenerator targetPackage="com.example.demo.mapper"
                             targetProject="src/test/java"
                             type="XMLMAPPER"/>

        <table tableName="user_info">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
        <table tableName="common_error_codes">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>